<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header_wide') %>

<body>
    <table style="width: 80%; text-align: left; margin-left: auto; margin-right: auto;" cellpadding="2" cellspacing="2">
        <tbody>
            <tr>
                <td style="width: 40%">
                    <h1>
                        <%= show.title %>
                        <button onclick="location.href='/show/<%= show._id %>/edit'" class="edit">Edit</button>
                        <button onclick="location.href='/show/<%= show._id %>/delete'" lass="delete">Delete</button>
                    </h1>
                </td>
                <td style="text-align: right;">
                    <%= show.description %>
                </td>
                <td style="width: 10%; text-align: center">
                    <button onclick="location.href='/show/<%= show._id %>/new_episode'" class="new">Add new episode</button>
                </td>
            </tr>
        </tbody>
    </table>

    <table style="width: 80%; text-align: left; margin-left: auto; margin-right: auto;" border="1" cellpadding="2"
        cellspacing="2">
        <tbody>

            <% episodelist.forEach(function(episode){ %>
                <tr style="height: 50px;">
                    <td style="width: 15%; text-align: center">S<%= episode.season %>E<%= episode.episode %></td>
                    <td style="width: 60%;"><%= episode.title %></td>
                    <td style="width: 5%; text-align: center">
                        <input type="checkbox" checked>
                    </td>
                    <td style="width: 10%; text-align: center">
                        <button onclick="location.href='/show/<%= show._id %>/s<%= episode.season %>e<%= episode.episode %>/edit'" class="edit">Edit</button>
                    </td>
                    <td style="width: 10%; text-align: center">
                        <button onclick="location.href='/show/<%= show._id %>/s<%= episode.season %>e<%= episode.episode %>/delete'" class="delete">Delete</button>
                    </td>
                </tr>
            <% }); %>

        </tbody>
    </table>

    <table style="width: 80%; text-align: left; margin-left: auto; margin-right: auto;" cellpadding="2" cellspacing="2">
        <tbody>
            <tr>
                <td><button onclick="location.href='/'" class="back">Back</button></td>
            </tr>
        </tbody>
    </table>
</body>

</html>